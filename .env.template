# ------------------------------------------
# Backend Settings (.env)
# ------------------------------------------
# Secret key for JWT signing - USE A SECURE KEY IN PRODUCTION
SECRET_KEY=yoursecretkeyhere_keepitasecret
# Algorithm for JWT
ALGORITHM=HS256
# Token expiration time (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=1440 

# Database URL used by SQLAlchemy
DATABASE_URL=sqlite:///./qmexai_dev.db

# Any specific backend port if needed
PORT=8000

# ------------------------------------------
# Frontend Settings (.env.local)
# ------------------------------------------
# The base URL pointing to the FastAPI backend API
NEXT_PUBLIC_API_URL=http://localhost:8000
